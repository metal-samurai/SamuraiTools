<Window x:Class="SamuraiTools.Wpf.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamuraiTools.Wpf"
        mc:Ignorable="d"
        Title="" Height="100" Width="400">
    <Grid>
        <TextBlock x:Name="DisplayTextBlock" x:FieldModifier="protected" Text="{Binding DisplayMessage}" TextWrapping="Wrap" Margin="2"></TextBlock>
    </Grid>
</Window>
